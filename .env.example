# .env.example
# Academic Research MCP Configuration

# Server Configuration
ACADEMIC_MCP_SERVER_NAME=academic-research-mcp
ACADEMIC_MCP_SERVER_VERSION=1.0.0

# Go Service Configuration
ACADEMIC_MCP_GO_SERVICE_URL=http://localhost:8080
ACADEMIC_MCP_GO_SERVICE_TIMEOUT=30
ACADEMIC_MCP_GO_SERVICE_MAX_RETRIES=3
ACADEMIC_MCP_GO_SERVICE_RETRY_delay=1.0

# Connection Pool Configuration
ACADEMIC_MCP_GO_SERVICE_MAX_CONNECTIONS=100
ACADEMIC_MCP_GO_SERVICE_MAX_CONNECTIONS_PER_HOST=30
ACADEMIC_MCP_GO_SERVICE_KEEPALIVE_TIMEOUT=30

# Logging Configuration
ACADEMIC_MCP_LOG_LEVEL=INFO
ACADEMIC_MCP_LOG_FORMAT=json

# Cache Configuration
ACADEMIC_MCP_ENABLE_CACHE=true
ACADEMIC_MCP_CACHE_TTL=3600

# Development
ACADEMIC_MCP_DEBUG=false
